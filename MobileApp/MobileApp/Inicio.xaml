<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Inicio">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
            <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario" />
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked" />
            <Label Text="¿No tienes una cuenta? Regístrate aquí" TextColor="Blue" FontAttributes="Italic" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
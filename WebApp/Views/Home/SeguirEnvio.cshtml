@{
    Layout = "Layout";
    ViewBag.Title = "Seguir Envío";
}

<h2>Seguir Envío</h2>

<form method="post" action="@Url.Action("ConsultarEnvio", "Home")">
    <div class="form-group">
        <label for="dni">DNI</label>
        <input type="text" class="form-control" id="dni" name="dni" required>
    </div>
    <div class="form-group mt-3">
        <label for="clienteid">ID Cliente</label>
        <input type="number" class="form-control" id="clienteid" name="clienteid" required>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Consultar</button>
</form>

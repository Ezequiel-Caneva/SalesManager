@{
    Layout = "Layout";
    ViewBag.Title = "";
}

<h2></h2
<h2></h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 400px; width: 100%;">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="h4 mb-0">Seguir Envío</h2>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("ConsultarEnvio", "Home")">
                <div class="form-group">
                    <label for="dni" class="form-label">DNI</label>
                    <input type="text" class="form-control" id="dni" name="dni" placeholder="Ingrese su DNI" required>
                </div>
                <div class="form-group mt-3">
                    <label for="clienteid" class="form-label">ID Cliente</label>
                    <input type="number" class="form-control" id="clienteid" name="clienteid" placeholder="Ingrese el ID del cliente" required>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-block">Consultar</button>
                </div>
            </form>
        </div>
    </div>
</div>
